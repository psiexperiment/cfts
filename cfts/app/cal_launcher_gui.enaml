class OutputSettings(Atom):

    output = Str()
    pistonphone = Str()
    microphone = Str()
    microphone_gain = Float(20)
    starship = Str()
    starship_gain = Float(40)
    ear = Str()

    def __init__(self, *args, **kwargs):
        super().__init__(*args, **kwargs)
        self.load_config()

    def __del__(self):
        self.save_config()

    def _default_starship(self):
        try:
            return next(cfts_starship_loader.list_names())
        except StopIteration:
            return ''

    def _default_microphone(self):
        try:
            return next(cfts_mic_loader.list_names())
        except StopIteration:
            return ''

    def _default_ear(self):
        try:
            return next(cfts_inear_loader.list_names())
        except StopIteration:
            return ''

    def get_env_vars(self):
        env = {
            'CFTS_TEST_STARSHIP': self.output,
            f'CFTS_STARSHIP_{self.output}_GAIN': str(self.starship_gain),
            'CFTS_CAL_MIC_GAIN': str(self.microphone_gain)
        }
        try:
            starship = starship_manager.get_object(self.starship)
            cal = starship.get_current_calibration()
            env[f'CFTS_STARSHIP_{self.output}'] = cal.to_string()
        except:
            pass
        try:
            mic = microphone_manager.get_object(self.microphone)
            cal = mic.get_current_calibration()
            env['CFTS_CAL_MIC'] = cal.to_string()
        except:
            pass
        return env

    def save_config(self):
        filename = f'output_{self.output}.json'
        file = get_config_folder() / 'cfts' / 'calibration' / filename
        file.parent.mkdir(exist_ok=True, parents=True)
        config = {
            'microphone': self.microphone,
            'microphone_gain': self.microphone_gain,
            'starship': self.starship,
            'starship_gain': self.starship_gain,
            'ear': self.ear,
        }
        file.write_text(json.dumps(config, indent=2))

    def load_config(self):
        filename = f'output_{self.output}.json'
        file = get_config_folder() / 'cfts' / 'calibration' / filename
        if not file.exists():
            return
        config = json.loads(file.read_text())
        for k, v in config.items():
            setattr(self, k, v)

    def run_mic_cal(self):
        filename = f'{{date_time}} {self.microphone} {self.pistonphone}'
        filename = ' '.join(filename.split())
        pathname = CAL_ROOT / 'microphone' / self.microphone / filename
        args = ['psi', 'pistonphone_calibration', str(pathname)]
        print(' '.join(args))
        subprocess.check_output(args, env=dict(os.environ, **self.get_env_vars()))

    def _run_cal(self, experiment):
        filename = f'{{date_time}} {self.starship} {self.microphone} {experiment}'
        filename = ' '.join(filename.split())
        pathname = CAL_ROOT / 'starship' / self.starship / filename
        args = ['psi', experiment, str(pathname)]
        print(' '.join(args))
        subprocess.check_output(args, env=dict(os.environ, **self.get_env_vars()))

    def run_pt_cal_golay(self):
        self._run_cal('pt_calibration_golay')

    def run_pt_cal_chirp(self):
        self._run_cal('pt_calibration_chirp')

    def run_inear_cal_chirp(self, save=True):
        filename = f'{{date_time}} {self.ear} {self.starship}'
        filename = ' '.join(filename.split())
        pathname = CAL_ROOT / 'inear' / self.ear / filename
        args = ['psi', 'inear_speaker_calibration_chirp', str(pathname)]
        print(' '.join(args))
        subprocess.check_output(args, env=dict(os.environ, **self.get_env_vars()))


